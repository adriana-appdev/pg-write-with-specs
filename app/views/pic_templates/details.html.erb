<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @pic.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @pic.caption %>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @pic.owner.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= time_ago_in_words(@pic.created_at) %> ago
  </dd>

  <dt>Fans</dt>
  <dd>
    <%= @pic.fans.pluck(:username).to_sentence %>
  </dd>
  
  <dt>Danger Zone</dt>
# NEEDS UPDATE PHOTO RECORD
  <dd>
    <a href= "/delete_photo/<%@pic.id %>">Delete photo</a> 
  </dd>
</dl>

<dt><h2> Comments</h2></dt>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @pic.comments.order({ :created_at => :asc }).each do |comment| %>
  <tr>
    <td>
      <%= comment.author.username %>
    </td>

    <td>
      <%= comment.body %>
    </td>

    <td>
      <%= time_ago_in_words(comment.created_at) %> ago
    </td>
  </tr>
  <% end %>
</table>

<h2> Add a new comment </h2>
<form>
  
  <label for="owner_dropdown">
    Commenter
  </label>
  
  <select id="owner_dropdown" name="poster_id">
    <% @all_users.each do |a_user| %>
      <option value="<%= a_user.id %>">
        <%= a_user.username %>
        
        (<%= a_user.own_photos.count %> photos)
      </option>
    <% end %>
  
  </select>
    <label for="comment_box">
    Comment
  </label>
  
  <textarea
    id="comment_box"
    name="pic_comment"
    placeholder="Enter a comment..."
  ></textarea>
  
    <button>
    Add comment
  </button>
</form>

